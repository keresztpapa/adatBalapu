<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="stylesheets/style.css">
  <link rel="stylesheet" href="stylesheets/kosar.css">
  <script src="javascripts/cartFunction.js"></script>
  <title>Könyvesbolt</title>
</head>
<body>
    <!-- Navbar -->
    <% include navbar %>
    <!-- Content area -->
    <div class="content">
      <h2> Kosár </h2>
      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th>Cím</th>
            <th>Darabszam</th>
            <th>Hova</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(row) { %>
            <tr>
              <td id="email_id"><%= row[0] %></td>
              <td id="konyv_cim_id"><%= row[1] %></td>
              <td id="darabszam_id"><%= row[2] %></td>
              <td id="hova_id"><%= row[3] %></td>
              <td><button onclick="deleteFromCart('<%= row[4] %>')">Törlés</button></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <button onclick="finalize()">Megrendelés végelegesítése</button>
    </div>
  </body>
</html>